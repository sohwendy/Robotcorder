{
  "name": "robotcorder",
  "version": "0.1.10",
  "description": "A Robot that records user action and scans the page to generate RobotFramework test scripts (beta)",
  "main": "src.background.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint .",
    "lint-fix": "./node_modules/.bin/eslint . --fix",
    "test-local": "./node_modules/mocha/bin/mocha -r jsdom-global/register test/**/*.js",
    "test": "npm run lint && npm run test-local",
    "export": "./script/export.command"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sohwendy/Robotcorder.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sohwendy/Robotcorder/issues"
  },
  "homepage": "https://github.com/sohwendy/Robotcorder#readme",
  "devDependencies": {
    "chai": "^4.0.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.7.0",
    "jsdom": "11.1.0",
    "jsdom-global": "3.0.2",
    "mocha": "^3.4.2",
    "sinon-chrome": "^2.2.1"
  }
}
